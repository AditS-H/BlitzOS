# EditorConfig for MyOS project
# Ensures consistent coding style across different editors and IDEs
# See https://editorconfig.org for more information

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ source files
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4
max_line_length = 100

# Assembly files
[*.{asm,s,S}]
indent_style = space
indent_size = 4

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[*.mk]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Linker scripts
[*.ld]
indent_style = space
indent_size = 4

# Configuration files
[*.{json,xml,yml,yaml}]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# GRUB configuration
[*.cfg]
indent_style = space
indent_size = 4
